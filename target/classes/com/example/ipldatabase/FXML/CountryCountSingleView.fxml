<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ipldatabase.Controllers.CountryCountSingleViewController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <HBox fx:id="countryCard" alignment="CENTER" layoutX="126.0" layoutY="54.0" prefHeight="310.0" prefWidth="540.0"
              style="-fx-background-radius: 25 25 25 25; -fx-background-color: #7f8fa6;">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <ImageView fx:id="countryFlag" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </ImageView>
                        <Label fx:id="countryName" alignment="CENTER" prefHeight="69.0" prefWidth="269.0" text="Label"
                               textAlignment="CENTER" textFill="#f8f1f1" textOverrun="CENTER_ELLIPSIS" wrapText="true">
                            <font>
                                <Font name="Tw Cen MT Condensed Extra Bold" size="24.0"/>
                            </font>
                        </Label>
                        <Label fx:id="playerCount" alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0"
                               prefWidth="269.0" text="Label" textFill="#f8f1f1">
                            <font>
                                <Font name="Tw Cen MT Condensed Extra Bold" size="24.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
